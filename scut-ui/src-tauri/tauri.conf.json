{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "SCUT",
    "version": "0.3.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.github.drmason13.scut",
      "icon": [
        "icons/scut.png",
        "icons/scut.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "systemTray": {
        "iconPath": "icons/icon.png",
        "iconAsTemplate": false
    },
    "windows": [
      {
        "label": "tray",
        "fullscreen": false,
        "resizable": false,
        "title": "SCUT",
        "width": 300,
        "height": 450,
        "visible": false,
        "skipTaskbar": true,
        "decorations": false
      }
    ]
  }
}
